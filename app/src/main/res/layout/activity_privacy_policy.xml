<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="4dp">

    <View
        android:id="@+id/detail_status_space"
        android:layout_width="match_parent"
        android:layout_height="@dimen/status_bar_height"
        android:background="@color/white"
        />
    <com.sms.code.views.ActionView
        android:id="@+id/action_policy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="隐私协议"
        app:icon_visible="false"
        android:layout_below="@+id/detail_status_space"
        />

    <WebView
        android:id="@+id/privacy_policy_webview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/action_policy"
        />

</RelativeLayout>