<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:padding="4dp"
    app:cardCornerRadius="4dp"
    app:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        >
        <TextView
            android:id="@+id/sms_phone_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/jike_text"
            android:textIsSelectable="true"
            tools:text="18888888888"
            />
        <TextView
            android:id="@+id/sms_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/jike_text"
            tools:text="2018.08.08 15:30"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            />

        <TextView
            android:id="@+id/sms_body_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/jike_text"
            android:layout_below="@+id/sms_phone_tv"
            android:layout_marginTop="8dp"
            tools:text="某男向某女求爱，用二胡拉了一曲＜二泉映月＞．事后女的说：＂二胡拉的不咋地，人长的倒是和瞎子阿炳挺像．＂"
            />

    </RelativeLayout>
</android.support.v7.widget.CardView>