<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="NoActionBarAppTheme" parent="AppTheme">
        <!-- 全屏、无标题栏、状态栏透明 -->
        <item name="android:windowTranslucentStatus">true</item>
        <item name="windowNoTitle">true</item>

    </style>

    <style name="CodeBtnStyle" parent="Theme.AppCompat.Light">
        <item name="colorButtonNormal">@color/btn_jike</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="actionStyle">
        <item name='android:textColor'>@color/action_text</item>
        <item name='android:textSize'>@dimen/code_text</item>
    </style>

</resources>
